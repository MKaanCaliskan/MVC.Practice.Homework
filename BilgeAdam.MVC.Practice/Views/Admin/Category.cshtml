@{
    ViewData["title"] = "Kategori Yönetim Paneli";
    Layout = "_AdminLayout";
}
@model CategoryAddDto
<div class="row">
   <div class="col-5">
         <form asp-action="CreateCategory" method="post">
         <div asp-validation-summary="ModelOnly" class="text-danger"></div>
         <div class="form-group">
            <label for="Name">Kategori Adı</label>
            <input type="text" id="Name" class="form-control" asp-for="Name" />
             <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Description">Tanım</label>
            <input type="text" id="Description" class="form-control" asp-for="Decription" />
        </div>
   
        <button class="btn btn-primary float-end mt-3 w-25" type="submit">Kaydet</button>
        </form>
    </div> 
    <div class="col-7">
       @await Component.InvokeAsync("CategoryList")
    </div>

</div>

