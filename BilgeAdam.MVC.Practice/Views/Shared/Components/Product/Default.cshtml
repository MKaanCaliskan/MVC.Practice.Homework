@model List<Product>


<div class="row">
       <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Ürün Adı</th>
                        <th>Fiyat</th>
                        <th>Stok</th>
                        <th>Sil</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var p in @Model)
                    {
                        <tr>
                            <td>@p.ProductName</td>
                            <td>@p.UnitPrice</td>
                            <td>@p.UnitsInStock</td>
                            <td><a href="/Admin/DeleteProduct/@p.ProductID" class="btn btn-sm btn-outline-danger"><i class="bi bi-trash"></i></a></td>
                        </tr>
                    }
                </tbody>
       </table>   
</div>


