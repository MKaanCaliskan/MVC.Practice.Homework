@model List<Category>

<div class="row">
  <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Kategori Adı</th>
                        <th>Detay</th>
                        <th>Sil</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var p in @Model)
                    {
                        <tr>
                            <td>@p.CategoryName</td>
                            <td>@p.Description</td>
                            <td><a href="/Admin/DeleteCategory/@p.CategoryID" class="btn btn-sm btn-outline-danger"><i class="bi bi-trash"></i></a></td>
                        </tr>
                    }
                </tbody>
     </table>   
</div>